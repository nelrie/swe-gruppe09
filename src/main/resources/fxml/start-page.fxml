<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<?import javafx.scene.text.TextFlow?>
<?import java.net.URL?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="feedback.ui.controller.StartPageController"
      fx:id="root"
      >
    <fx:include source="header.fxml"/>
    <stylesheets>
        <URL value="@/css/styles.css" />
    </stylesheets>
    <VBox alignment="CENTER" spacing="20" prefWidth="600" >
        <Label text="Willkommen im Bürgerbeteiligungssystem!" styleClass="header"/>
        <TextFlow fx:id="contentText" styleClass="contentText" textAlignment="CENTER" maxWidth="800">
            <Text text="Sie können ein Feedback verfassen und den Status Ihres Feedbacks jederzeit verfolgen. Nachdem Sie Ihr Feedback erfolgreich eingereicht haben, wird diesem eine eindeutige Feedback-Identifikationsnummer (ID) zugeordnet. Bitte notieren Sie sich diese, um damit jederzeit den Status abrufen zu können. Wir freuen uns auf Ihre Anregungen, Ideen und Vorschläge zur Verbesserung unserer Stadt."/>
        </TextFlow>
        </VBox>
    </VBox>

